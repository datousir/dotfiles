{
    // config for vim
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.easymotion": true,

    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.statusBarColorControl": true,
    // "vim.statusBarColors" : {
    //     "normal": "#005f5f",
    //     "insert": "#5f0000",
    //     "visual": "#5f00af",
    //     "visualline": "#005f87",
    //     "visualblock": "#86592d",
    //     "replace": "#000000"
    // },
    "vim.leader": ",",
    "vim.startInInsertMode": false,
    "vim.insertModeKeyBindings": [{
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],

    // config for workbench
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
    "workbench.activityBar.visible": true,


    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 36,
    "editor.fontSize": 14,
    "editor.fontFamily": "'Fira Mono', Menlo, Monaco, 'Courier New', monospace",
    // "workbench.colorCustomizations": {
    //     "statusBar.background": "#005f87",
    //     "statusBar.noFolderBackground": "#005f87",
    //     "statusBar.debuggingBackground": "#005f87"
    // },
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 0,
    "extensions.ignoreRecommendations": false,
    "gitlens.historyExplorer.enabled": true,

    "terminal.integrated.fontFamily": "Meslo LG M DZ for Powerline",
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
}